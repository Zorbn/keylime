{
    "name": "HTML",
    "extensions": [
        "html",
        "xml"
    ],
    "indent_width": 4,
    "syntax": {
        "ranges": [
            {
                "kind": "String",
                "start": "\"",
                "end": "\""
            },
            {
                "kind": "Comment",
                "start": "<!%-%-",
                "end": "%-%->"
            }
        ],
        "tokens": [
            {
                "kind": "Keyword",
                "pattern": "<(%w+)"
            },
            {
                "kind": "Keyword",
                "pattern": "</(%w+)>"
            },
            {
                "kind": "Keyword",
                "pattern": "<!(%w+)>"
            },
            {
                "kind": "Symbol",
                "pattern": "[<>/!=]"
            }
        ]
    }
}