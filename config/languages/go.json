{
    "name": "Go",
    "extensions": [
        "go"
    ],
    "lsp": {
        "command": "gopls",
        "language_id": "go"
    },
    "syntax": {
        "keywords": [
            "break",
            "default",
            "func",
            "interface",
            "select",
            "case",
            "defer",
            "go",
            "map",
            "struct",
            "chan",
            "else",
            "goto",
            "package",
            "switch",
            "const",
            "fallthrough",
            "if",
            "range",
            "type",
            "continue",
            "for",
            "import",
            "return",
            "var"
        ],
        "ranges": [
            {
                "kind": "String",
                "start": "\"",
                "end": "\"",
                "escape": "\\"
            },
            {
                "kind": "String",
                "start": "`",
                "end": "`"
            },
            {
                "kind": "Comment",
                "start": "/%*",
                "end": "%*/"
            }
        ],
        "tokens": [
            {
                "kind": "Comment",
                "pattern": "//%.*"
            },
            {
                "kind": "Function",
                "pattern": "([%a_][%w_]*)%s*%("
            },
            {
                "kind": "Function",
                "pattern": "([%a_][%w_]*)%s*%[%.-%]%s*%("
            },
            {
                "kind": "Number",
                "pattern": "0x%x+"
            },
            {
                "kind": "Number",
                "pattern": "0b[01]+"
            },
            {
                "kind": "Number",
                "pattern": "(%d[%d_]*.?[%d_]*)[^.]"
            },
            {
                "kind": "Number",
                "pattern": "%d[%d_]*"
            },
            {
                "kind": "String",
                "pattern": "'\\u{%x-}'"
            },
            {
                "kind": "String",
                "pattern": "'\\x%x%x'"
            },
            {
                "kind": "String",
                "pattern": "'\\?%.'"
            },
            {
                "kind": "Symbol",
                "pattern": "[!=&,><./:@|;{}()%%%^%*%+%-%?%[%]]"
            }
        ]
    }
}